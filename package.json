{
  "name": "@marlinprotocol/contracts",
  "version": "2.0.0",
  "description": "Contracts pertaining to Marlin",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx hardhat test",
    "solhint": "solhint -f table contracts/**/*.sol",
    "compile": "npx hardhat compile",
    "clean": "rm ./.openzeppelin/unknown-31337.json && npx hardhat clean",
    "prettify:contracts": "npx prettier --write contracts/**/*.sol",
    "prettify:test": "npx prettier --write test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marlinprotocol/contracts.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marlinprotocol/contracts/issues"
  },
  "homepage": "https://github.com/marlinprotocol/contracts",
  "dependencies": {
    "@openzeppelin/contracts": "4.4.1",
    "@openzeppelin/contracts-upgradeable": "4.4.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/hardhat-upgrades": "1.11.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "ethers": "^5.7.2",
    "hardhat": "2.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
