{
  "name": "@marlinprotocol/contracts",
  "version": "2.0.0",
  "description": "Contracts pertaining to Marlin",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npx hardhat typechain",
    "fix": "npx hardhat run deployments/delegationsFix/fix.ts --network ",
    "test": "truffle test",
    "solhint": "solhint -f table contracts/**/*.sol",
    "compile": "sol-compiler",
    "prettify:contracts": "npx prettier --write contracts/**/*.sol",
    "prettify:test": "npx prettier --write test/*.js",
    "prettify:migrations": "npx prettier --write migrations/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marlinprotocol/contracts.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marlinprotocol/contracts/issues"
  },
  "homepage": "https://github.com/marlinprotocol/contracts",
  "dependencies": {
    "@openzeppelin/contracts": "4.4.1",
    "@openzeppelin/contracts-upgradeable": "4.4.1",
    "solidity-bytes-utils": "0.8.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-truffle5": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "1.11.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "2.6.7",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "web3": "^1.6.0"
  }
}
